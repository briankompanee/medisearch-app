{% extends 'base.html.twig' %}

{% block title %}Doctor Availability{% endblock %}

{% block body %}
<div class="container mx-auto mt-8">
    <h1 class="text-2xl font-bold mb-4">Check Doctor Availability</h1>

    {{ form_start(doctorSearchForm, {'attr': {'class': 'space-y-4'}}) }}
        <div class="mb-4">
            {{ form_label(doctorSearchForm.doctor_name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(doctorSearchForm.doctor_name, {'attr': {'class': 'mt-1 block w-full sm:w-1/2 lg:w-1/3 pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md'}}) }}
        </div>
        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Search Doctor</button>
    {{ form_end(doctorSearchForm) }}

    {% if availability is not empty %}
        <h2 class="text-xl font-semibold mt-8">Available Time Slots</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for slot in availability %}
                <div class="bg-white p-4 rounded shadow">
                    <p>Date: {{ slot.date }}</p>
                    <p>Start Time: {{ slot.start_time }}</p>
                    <p>End Time: {{ slot.end_time }}</p>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-red-500 mt-4">No available time slots for this doctor.</p>
    {% endif %}
</div>
{% endblock %}
